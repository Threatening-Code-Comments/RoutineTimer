<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_EditRoutine_sequential_color_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/unrelatedElementsSpacing"
    android:visibility="gone"
    app:cardCornerRadius="@dimen/dimen_cardViewCornerRadius"
    app:layout_constraintBottom_toTopOf="@+id/cv_EditRoutine_sequential_tile_card"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout_editor_absoluteX="40dp"
    tools:showIn="@layout/fragment_edit_sequential_routine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/looselyRelatedElementsSpacing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_tv_EditRoutine_sequential_color_hue"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sl_EditRoutine_sequential_color_hueSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="360" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>