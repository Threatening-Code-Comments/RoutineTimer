<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_View_ConTile_MainCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/dimen_cardViewCornerRadius"
        app:cardElevation="0dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_View_ConTile_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toTopOf="@id/tv_View_ConTile_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_defaultdrawable" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_View_ConTile_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_View_ConTile_icon"
        tools:text="Tile name!" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_View_ConTile_info1Icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/iv_View_ConTile_info2Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_View_ConTile_icon"
        tools:src="@drawable/ic_mode_tap"
        tools:tint="@color/onSurfaceLight" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_View_ConTile_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_View_ConTile_info1Icon"
        app:layout_constraintStart_toEndOf="@id/iv_View_ConTile_info1Icon"
        app:layout_constraintTop_toTopOf="@id/iv_View_ConTile_info1Icon"
        tools:text="12x" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_View_ConTile_info2Icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_View_ConTile_icon"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_mode_tap"
        tools:tint="@color/onSurfaceLight" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_View_ConTile_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_View_ConTile_info2Icon"
        app:layout_constraintStart_toEndOf="@id/iv_View_ConTile_info2Icon"
        app:layout_constraintTop_toTopOf="@id/iv_View_ConTile_info2Icon"
        tools:text="12x" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:hint="@string/str_View_ConTile_dataInfo"
        app:layout_constraintBottom_toBottomOf="@id/iv_View_ConTile_icon"
        app:layout_constraintEnd_toStartOf="@id/iv_View_ConTile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_View_ConTile_icon">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/et_View_ConTile_dataInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:paddingHorizontal="5dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="24sp" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>