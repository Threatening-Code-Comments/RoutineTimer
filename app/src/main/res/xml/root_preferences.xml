<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences_general_header">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/pref_general_dataSaving_key"
            app:title="@string/pref_general_dataSaving_title" />

        <SwitchPreference
            app:defaultValue="true"
            app:key="dev_options"
            app:title="Developer options" />

    </PreferenceCategory>

    <PreferenceCategory
        app:dependency="dev_options"
        app:title="@string/preferences_dev_header">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/pref_dev_debug_key"
            app:title="@string/pref_dev_debug_title" />

    </PreferenceCategory>

</PreferenceScreen>