<resources>
    <!-- Base application theme. -->


    <!-- Your custom dialog style, don't forget to specify the parent style! -->

    <!-- Custom style for the list headers, again don't forget the parent! -->

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="rectImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0%</item>
    </style>

    <style name="routineToolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="routineToolbarLayout">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


    <style name="textInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox" />

    <style name="textInputDiscreteStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense" />

    <style name="textInputShape" />

    <style name="dropdownsStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" />

    <style name="dropdownsShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10sp</item>
    </style>

    <style name="restartButtonShapeOverlay">
        <item name="cornerSizeTopLeft">@dimen/dimen_cardViewCornerRadius</item>
        <item name="cornerSizeBottomLeft">@dimen/dimen_cardViewCornerRadius</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="deleteButtonShapeOverlay">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/dimen_cardViewCornerRadius</item>
        <item name="cornerSizeBottomRight">@dimen/dimen_cardViewCornerRadius</item>
    </style>


</resources>